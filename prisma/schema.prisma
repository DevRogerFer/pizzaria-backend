generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// criando uma migration: yarn prisma migrate dev
model User {
  id String @id @default(uuid())
  name String
  email String
  password String
  created_at DateTime? @default(now()) // por padrão pega a data atual do banco
  updated_at DateTime? @default(now()) // por padrão pega a data exata da criação do usuário
  // mapeando como a tabela será criada no banco de dados
  @@map("users")
}

model Category {
  id String @id @default(uuid())
  name String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  @@map("categories")
  // relacionamento com a tabela products
  products Product[]
}

model Product {
  id String @id @default(uuid())
  name String
  price String
  description String
  banner String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  // referência a tabela category
  category Category @relation(fields: [category_id], references: [id])
  @@map("products")
  category_id String
  // relacionamento com a tabela item
  items Item[]
}

model Order {
  id String @id @default(uuid())
  table Int
  status Boolean @default(false)
  draft Boolean @default(true)
  name String?
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  @@map("orders")  
  // relacionamento: uma order (pedido) pode contar vários itens
  items Item[]
}

model Item {
  id String @id @default(uuid())
  amount Int
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())  
  // relacionamento com as tabelas orders e products
  order Order @relation(fields: [order_id], references: [id])
  product Product @relation(fields: [product_id], references: [id])
  @@map("items")
  order_id String
  product_id String
}